<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to 'All products', root_path, class: 'btn btn-secondary' %>
  <%= link_to 'Cart Products', products_carts_path, class: 'btn btn-secondary' %>
</div>
<%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-secondary' do %>
  Log Out
  <i class="fa fa-fw fa-sign-out-alt text-danger ml-1"></i>
<% end %>

<h1 class="text-center">Carts Products</h1>
<div class="row row-deck" style="margin-top: 50px;">
  <% @products.each do |product| %>
    <div class="mt-3 mx-2 card" style="width: 18rem;">
      <% if product.image.attached? %>
        <%= image_tag product.image, class: 'card-img-top', size: "200x200", alt: 'Card image cap' %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= "Name : #{product.name}" %></h5>
        <p class="card-text"><%= "Price : #{product.price}" %></p>
        <p class="card-text"><%= "Quantity : #{product.quantity}" %></p>
         <%= link_to products_cart_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' do %>
          Remove from cart
        <% end %>
      </div>
    </div>
  <% end %>
</div>
